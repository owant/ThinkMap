<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/chelsea_cucumber</item>
        <item name="colorPrimaryDark">@color/chelsea_cucumber</item>
        <item name="colorAccent">@color/chelsea_cucumber</item>

        <!--对于menu的显示为more的图标下-->
        <item name="overlapAnchor">false</item>
    </style>

    <style name="SplashStyle" parent="AppTheme">
        <item name="colorPrimary">@color/athens_gray</item>
        <item name="colorPrimaryDark">@color/athens_gray</item>
        <item name="android:background">@color/athens_gray</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="TabTheme">
        <item name="android:background">@drawable/tab_bg</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/tab_color</item>
        <item name="android:drawablePadding">@dimen/padding_super_small</item>
        <item name="android:textSize">@dimen/text_size_iv_tell</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionMenuTextColor">@color/jaguar</item>
        <item name="android:actionMenuTextColor">@color/jaguar</item>
        <!--toolbar的文本颜色-->
        <item name="android:textColorPrimary">@color/jaguar</item>
    </style>

    <!--移除背景进行优化-->
    <style name="DivDialog" parent="@style/Theme.AppCompat.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@drawable/dialog_edit_input_bg</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">false</item>

    </style>

    <!--可以进行Style抽取:双击进行Refactor》Style-->
    <style name="Theme.NoBackground" parent="AppTheme">
        <item name="android:windowBackground">@null</item>
    </style>

    <!--自定义Dialog-->
    <style name="ClipStyle">
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
    </style>

</resources>
